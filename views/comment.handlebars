<section class="card">
      <header>{{topic.title}} 
      <h6 class="headerInfo">Posted by {{topic.user.username}} on {{format_date topic.createdAt}}</h6>
    </header>
    <p class="card-body">{{topic.content}}</p>
  </section>


    <section class="card">
      <header>Comment
      </header>
      {{#each comments as |comment|}}
      <p class="card-body" style="display: block;">{{comment.comment}}
        <br>
        <h6 style="color: var(--secondary); text-align: right; margin: 10px;"> 
          -By {{comment.user.username}}
          <br> {{format_date comment.createdAt}}
          </h6> 
      </p style="display: block;">
      {{/each}}

    </section>
