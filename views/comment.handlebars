<section class="card">
      <header>{{topic.title}} 
      <p class="headerInfo">Posted by {{topic.user.username}} on {{format_date topic.createdAt}}</p>
    </header>
    <p>{{topic.content}}</p>
  </section>


    <section class="card">
      <header>Comment
      </header>
      {{#each topic.comments as |comment|}}
      <p style="display: block;">{{comment.comment}}
        <br>
        By {{topic.user.username}} </p style="display: block;">
      {{id}}
      {{/each}}

    </section>
